<Window x:Class="RemoteDesktopWPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="650" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#f0f2f5">
    <Border CornerRadius="10" Background="White" Padding="30" Margin="20" VerticalAlignment="Center">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Create Account" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Username" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox Name="UserNameBox" Height="30" FontSize="14" Padding="5" Background="#f5f5f5" BorderThickness="1" BorderBrush="#ccc"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox Name="EmailBox" Height="30" FontSize="14" Padding="5" Background="#f5f5f5" BorderThickness="1" BorderBrush="#ccc"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Password" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <PasswordBox Name="PasswordBox" Height="30" FontSize="14" Padding="5" Background="#f5f5f5" BorderThickness="1" BorderBrush="#ccc"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="First Name" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox Name="FirstNameBox" Height="30" FontSize="14" Padding="5" Background="#f5f5f5" BorderThickness="1" BorderBrush="#ccc"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Last Name" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox Name="LastNameBox" Height="30" FontSize="14" Padding="5" Background="#f5f5f5" BorderThickness="1" BorderBrush="#ccc"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Address" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox Name="AddressBox" Height="30" FontSize="14" Padding="5" Background="#f5f5f5" BorderThickness="1" BorderBrush="#ccc"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Register" Width="100" Height="35" Margin="0,0,10,0" Background="#28A745" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="Register_Click"/>
                    <Button Content="Back" Width="100" Height="35" Background="#ddd" BorderThickness="0" FontWeight="Bold" Click="Back_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
