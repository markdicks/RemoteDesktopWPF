<Window x:Class="RemoteDesktopWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote Desktop - Welcome" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Welcome to RemoteDesktopWPF" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Login" Click="Login_Click" Height="35" Margin="0,5"/>
            <Button Content="Register" Click="Register_Click" Height="35" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
